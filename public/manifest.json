{
  "name": "screenshotter",
  "description": "A browser extension to take screenshots of web pages' DOM elements.",
  "version": "1.0.0",
  "manifest_version": 3,
  "icons": {
    "16": "icon/16.png",
    "32": "icon/32.png",
    "48": "icon/48.png",
    "96": "icon/96.png",
    "128": "icon/128.png"
  },
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_title": "Screenshotter"
  },
  "background": {
    "service_worker": "background.global.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.global.js"],
      "css": ["style.css"]
    }
  ]
}
